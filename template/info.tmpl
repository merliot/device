<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>{{.Model}} - {{.Name}}</title>

		<link rel="stylesheet" type="text/css" href="css/common.css">
		<link rel="stylesheet" type="text/css" href="css/{{.Model}}.css">

	</head>

	<body>

		<header>
			<div>
				<img class="device-icon" src="images/icon.png"></img>
				<span class="device-title">{{.Name}}</span>
			</div>
		</header>

		<section class="divFlexCol panel">
			<div class="divFlexRow device-back" id="info-back" onclick="window.location.replace(document.referrer)">
				<img class="icon" src="images/back-icon.png">
				<span>Info</span>
			</div>

			<table class="info">
				<tr>
					<th>ID</th>
					<td>{{.Id}}</td>
				</tr>
				<tr>
					<th>Model</th>
					<td>{{.Model}}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{.Name}}</td>
				</tr>

				<tr class="hr-row">
					<td colspan="2"><hr></td>
				</tr>

				<tr>
					<th>Module Path</th>
					<td><a href="https://{{ .Module.Path }}">{{ .Module.Path }}</a></td>
				</tr>
{{ $first := true }}
{{ range $key, $value := .Module.Require }}
	{{ if not $value.Indirect }}
				<tr>
		{{ if $first }}
					<th>Requires</th>
		{{ else }}
					<th></th>
		{{ end }}
		{{ $first = false }}
					<td><a href="https://{{ $value.Mod.Path }}">{{ $value.Mod.Path }}</a></td>
				</tr>
				<tr>
					<th></th>
					<td>@{{ $value.Mod.Version }}</td>
				</tr>
	{{ end }}
{{ end }}
			</table>
		</section>
	</body>
</html>
