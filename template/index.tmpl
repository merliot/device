<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>{{.Model}} - {{.Name}}</title>

		<link rel="stylesheet" type="text/css" href="css/common.css">
		<link rel="stylesheet" type="text/css" href="css/{{.Model}}.css">

{{template "index-head.tmpl" .}}

	</head>

	<body class="online model-{{.Model}}">

		<header>
			<div>
				<img class="device-icon" src="images/icon.png"></img>
				<span class="device-title">{{.Name}}</span>
			</div>
			<span class="device-offline">Offline</span>
			<div>
{{if .Locked}}
				<span class="icon nono">&#x1F512;</span>
{{end}}
				<a class="icon" href="download-dialog">&#x1F4E5;</a>
				<a class="icon" href="info-dialog">&#x24D8;</a>
			</div>
		</header>

{{if ne .DeployParams ""}}
		<div class="full-body">
{{template "device-body.tmpl" .}}
		</div>
{{else}}
		<div class="divFlexRow panel" id="full-nodef">
			<span>Click</span>
			<a class="icon" href="download-dialog">&#x1F4E5;</a>
			<span>to setup and download {{.Name}}</span>
		</div>
{{end}}

		<script src="js/device.js"></script>
		<script src="js/{{.Model}}x.js"></script>

		<script>
			let device = new Device{{.ModelTitle}}(document.body, 0/* full view */)
			let conn = new Single({{.WebSocket}}, device)
		</script>

	</body>
</html>
